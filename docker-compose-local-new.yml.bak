version: '3.2'
services:
  db-image-category:
    build:
      context: ./
      dockerfile: ./docker/DockerfileMySQLCategory
    volumes:
      - "./.data/db:/var/lib/mysql"
    environment:
      MYSQL_ROOT_PASSWORD: c8de110f37300a53a971749
      #MYSQL_DATABASE: category
      #MYSQL_USER: webshopuser
      #MYSQL_PASSWORD: 240b2c6d58ff2ce2f508b49f
    ports:
      - "3306:3306"
    networks:
        local_dev_net:
            aliases:
                - db-image-category
                
    db-image-product:
    build:
      context: ./
      dockerfile: ./docker/DockerfileMySQLProduct
    volumes:
      - "./.data/db:/var/lib/mysql"
    environment:
      MYSQL_ROOT_PASSWORD: c8de110f37300a53a971749
      #MYSQL_DATABASE: category
      #MYSQL_USER: webshopuser
      #MYSQL_PASSWORD: 240b2c6d58ff2ce2f508b49f
    ports:
      - "3307:3306"
    networks:
        local_dev_net:
            aliases:
                - db-image-category

networks:
  local_dev_net:
    driver: bridge
